
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário é administrador
    function isAdmin() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Função para verificar se o usuário é o dono do documento
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /usuarios/{userId} {
      // Leitura: Permite se for o dono ou um admin
      allow read: if isOwner(userId) || isAdmin();

      // Criação: Permite se for um usuário autenticado criando seu próprio documento
      // e definindo a role como 'user'.
      allow create: if isOwner(userId) && request.resource.data.role == 'user';
      
      // Atualização:
      // - Admins podem atualizar qualquer campo.
      // - Usuários normais podem atualizar seus dados, mas não podem alterar a role.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      // Deleção: Permite apenas para admins (ou pode ser ajustado para isOwner(userId) se necessário)
      allow delete: if isAdmin();
    }
  }
}
