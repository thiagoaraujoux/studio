rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção de usuários
    match /usuarios/{userId} {
      // Permite que um usuário leia e atualize seus próprios dados de perfil.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Permite que qualquer usuário autenticado crie seu próprio perfil.
      allow create: if request.auth != null;

      // Regra para a subcoleção de progresso
      // Permite que um usuário crie, leia, atualize e exclua seus próprios registros de progresso.
      match /progresso/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
